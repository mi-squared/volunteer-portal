commands:
   01updateComposer:
      command: export COMPOSER_HOME=/root && /usr/bin/composer.phar self-update

option_settings:
   - namespace: aws:elasticbeanstalk:application:environment
     option_name: COMPOSER_HOME
     value: /root

container_commands:
   01-install-packages:
      command: "/usr/bin/composer.phar install --working-dir /var/app/ondeck/service --no-dev --optimize-autoloader --prefer-dist --no-interaction"
   02-make-env:
      command: "cp /var/app/ondeck/service/.env-ci /var/app/ondeck/service/.env"
   03-migrateSeed:
      command: "cd /var/app/ondeck/service && php artisan migrate"
   04-seed:
      command: "cd /var/app/ondeck/service && php artisan db:seed"
